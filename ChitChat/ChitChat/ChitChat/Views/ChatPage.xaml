<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChitChat.Views.ChatPage"
             >
    <ContentPage.Content>
            <StackLayout>
            <Frame 
                BorderColor="Black" 
                CornerRadius="10" 
                Padding="0"
                Margin="10, 10, 10, 0"
                BackgroundColor="LightGray"
                HeightRequest="55"
                HasShadow="False">
                <SearchBar 
                   x:Name="ContactsSearchBar"
                   Placeholder="Search User Email" 
                   PlaceholderColor="DimGray"
                   TextColor="Black"
                   FontSize="Medium"
                    SearchButtonPressed="SearchPressed"/>
                   <!--TextChanged="SearchBar_TextChanged"-->
                   
            </Frame>
                
            <!--Display if no contacts  
            <Label Text="You have no contacts as of the moment" 
                   FontSize="Medium" 
                   HorizontalTextAlignment="Center"
                   TextColor="Black"/>
                -->

            <!--Display contacts-->
            <ScrollView>
                <ListView x:Name="contactView" 
                      HeightRequest="610" 
                      SeparatorColor="DarkGray" 
                      Scale="0.96"
                      SelectionMode="None"
                      ItemSelected="ContactView_ItemSelected">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextCell Text="{Binding Name}"
                                   TextColor="Black"
                                   Detail ="{Binding Email}"
                                   DetailColor="#8c52ff"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>